@model IEnumerable<Universidad.Models.Alunmos_Materias>

@{
    ViewBag.Title = "Details";
}

<h2>Lista de Materias</h2>

<p>
    @Html.ActionLink("Asignar Nueva Materia", "CreateAlumnoMateria", new { cedula = ViewBag.Cedula })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            Nombre Alumno
        </th>
        <th>
            Materia
        </th>
        <th>
            Salon - Piso
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alumnos.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Materias.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salones.NumeroSalon) - @Html.DisplayFor(modelItem => item.Salones.Piso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota)
        </td>
        <td>
            @Html.ActionLink("Cambiar Nota", "EditNota", new { id = item.Id }) |
            @Html.ActionLink("Editar Materia", "EditAlumnoMateria", new { id = item.Id }) |
            @Html.ActionLink("Eiminar Materia", "DeleteAlumnoMateria", new { id = item.Id })
        </td>
    </tr>
}

</table>
